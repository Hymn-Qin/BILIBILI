<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/allView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="projectedit.lanou.com.bilibili.OtherActivity.LIvePlayItemActivity">



    <RelativeLayout
        android:id="@+id/player_messager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">
        <com.superplayer.library.SuperPlayer
            android:id="@+id/super_player"
            android:layout_width="match_parent"
            android:layout_height="240dp">

        </com.superplayer.library.SuperPlayer>

        <LinearLayout
            android:id="@+id/load_play"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:background="@color/white">
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_02"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#00000000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/back_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zuojiantou"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的直播间"
                android:layout_toRightOf="@+id/back_play"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18sp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/menu_play"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@mipmap/sandian"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/end_play"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/end_play_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/other_anthor"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/end_play_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/other_anthor"
                android:layout_weight="1"/>

        </LinearLayout>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/pinglun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp">

        <RelativeLayout
            android:id="@+id/author_xin"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/beijing_huibai">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/author_ph"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/left_10dp"
                android:src="@mipmap/leimu_01"/>

            <TextView
                android:id="@+id/title_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这个是题目"
                android:layout_marginTop="@dimen/left_8dp"
                android:layout_marginLeft="@dimen/left_10dp"
                android:layout_toRightOf="@+id/author_ph"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"/>

            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者名字"
                android:layout_toRightOf="@+id/author_ph"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_12sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/left_10dp"/>

            <ImageView
                android:id="@+id/onlone_play"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/yan"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/left_8dp"
                android:layout_marginLeft="@dimen/left_10dp"
                android:layout_toRightOf="@+id/author_ph"/>

            <TextView
                android:id="@+id/num_onlone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数"
                android:layout_toRightOf="@+id/onlone_play"
                android:textColor="@color/hui"
                android:textSize="@dimen/text_10sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/left_8dp"
                android:layout_marginLeft="5dp"/>



            <android.support.v7.widget.CardView
                android:id="@+id/new_01"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/left_10dp"
                android:layout_marginRight="@dimen/left_10dp"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardPreventCornerOverlap="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/left_20dp"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="关注"
                    android:textSize="@dimen/text_15sp"
                    android:textColor="@color/white" />
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_xin"
            android:id="@+id/app"
            app:cardCornerRadius="1dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="true">
            <android.support.design.widget.TabLayout

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tab_play"
                android:background="@color/beijing_huibai"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextColor="@color/black"
                app:tabTextAppearance="@android:style/TextAppearance.Holo.Widget.PopupMenu.Small">

            </android.support.design.widget.TabLayout>

        </android.support.v7.widget.CardView>


        <android.support.v4.view.ViewPager
            android:id="@+id/pager_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app"
            android:background="@color/beijing_hui"
            android:layout_marginBottom="50dp">

        </android.support.v4.view.ViewPager>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@color/beijing_huibai">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui"
                />


            <ImageView
                android:id="@+id/gifts"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:src="@mipmap/gift"
                android:layout_marginLeft="@dimen/left_10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/play_danmu"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:hint="输入想发送的弹幕"
                android:textSize="@dimen/text_14sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/send_danmu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/zhifeiji"
                android:layout_marginRight="@dimen/left_10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/left_10dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
