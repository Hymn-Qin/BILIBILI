<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/left_10dp"
    android:layout_marginRight="@dimen/left_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/beijing_huibai"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:padding="@dimen/left_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_bg_02">
        <ImageView
            android:id="@+id/title_cha"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/chacha"
            />
        <TextView
            android:id="@+id/live_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#放映厅#"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_12sp"
            android:layout_below="@+id/title_cha"
            android:layout_marginTop="@dimen/left_8dp"
            android:layout_marginLeft="@dimen/left_8dp"/>

        <TextView
            android:id="@+id/name_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[官方] 旧番连播智慧版"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp"
            android:layout_toRightOf="@+id/live_cha"
            android:layout_below="@+id/title_cha"
            android:padding="@dimen/left_8dp"/>

        <TextView
            android:id="@+id/adress_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哔哩哔哩电台"
            android:textColor="@color/hui"
            android:layout_below="@+id/live_cha"
            android:textSize="@dimen/text_10sp"
            android:padding="@dimen/left_8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/live_cha"
            android:layout_marginTop="@dimen/left_8dp"
            android:layout_marginRight="@dimen/left_8dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/yan" />

            <TextView
                android:id="@+id/num_cha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="219"
                android:layout_gravity="center_vertical"
                android:textColor="@color/hui"
                android:textSize="@dimen/text_10sp"/>
        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>