<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/beijing_huibai"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/recycler_bg_02"
        >
        <ImageView
            android:id="@+id/item_image_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/yinyong"
            android:scaleType="centerCrop"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_image_1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/item_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                   [官方] 旧番连播智慧版"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/author_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者"
            android:textColor="@color/hui"
            android:textSize="@dimen/text_10sp"
            android:padding="5dp"
            android:layout_alignParentBottom="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="5dp">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/yan"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/num_like_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="219"
                android:layout_gravity="center_vertical"
                android:textColor="@color/hui"
                android:textSize="@dimen/text_10sp"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>