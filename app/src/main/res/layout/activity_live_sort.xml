<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beijing_hui"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="projectedit.lanou.com.bilibili.OtherActivity.LiveSortActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/beijing_huibai"
        app:cardElevation="6dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            >

            <ImageView
                android:id="@+id/sort_back"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:src="@mipmap/zuojiantou"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/sort_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部分类"
                android:textColor="@color/white_01"
                android:textSize="@dimen/text_18sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/sort_back"
                android:layout_marginLeft="@dimen/left_10dp"/>

            <ImageView
                android:id="@+id/sort_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/sandian"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/left_10dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/left_20dp">

        <include layout="@layout/fragment_live_sort_item_phone"
            android:id="@+id/phones"/>
        <include layout="@layout/fragment_live_sort_item_phone_game"
            android:id="@+id/phone_games"/>
        <include layout="@layout/fragment_live_sort_item_meng"
            android:id="@+id/mengs"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/fragment_live_sort_item_paint"
            android:id="@+id/paints"/>
        <include layout="@layout/fragment_live_sort_item_gameol"
            android:id="@+id/gameols"/>
        <include layout="@layout/fragment_live_sort_item_machine"
            android:id="@+id/machines"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/fragment_live_sort_item_esport"
            android:id="@+id/esports"/>
        <include layout="@layout/fragment_live_sort_item_music"
            android:id="@+id/musics"/>
        <include layout="@layout/fragment_live_sort_item_le"
            android:id="@+id/les"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/fragment_live_sort_item_culture"
            android:id="@+id/cultures"/>
        <include layout="@layout/fragment_live_sort_item_screening"
            android:id="@+id/screenings"/>
        <include layout="@layout/fragment_live_sort_item_k"
            android:id="@+id/k"/>
    </LinearLayout>

</LinearLayout>
