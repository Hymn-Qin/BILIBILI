<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical"
   >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car_menu"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/menu_black"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/fenxiang_down"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="    分享"
                android:textColor="@color/white_01"
                android:background="@color/menu_black"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/menu_onLine"/>
            <Button
                android:id="@+id/liulanqi_down"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="    浏览器打开"
                android:gravity="center_vertical"
                android:textColor="@color/white_01"
                android:background="@color/menu_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="4px"
                android:background="@color/menu_onLine"/>
            <Button
                android:id="@+id/fuzhi_down"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="    复制衔接"
                android:gravity="center_vertical"
                android:textColor="@color/white_01"
                android:background="@color/menu_black"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textColor="@color/white_01"
        android:background="@color/trans"/>
</LinearLayout>
