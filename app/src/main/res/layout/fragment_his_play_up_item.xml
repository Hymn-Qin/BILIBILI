<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/beijing_hui"
    android:layout_marginRight="15dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/beijing_hui"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        >
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:background="@drawable/recycler_bg_03">

            <ImageView
                android:id="@+id/his_item_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/hislizi"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/his_item_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxx人在看"
                android:textSize="@dimen/text_10sp"
                android:textColor="@color/white_01"
                android:layout_alignParentBottom="true"
                android:padding="3dp"
               />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/his_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="番剧的名字"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp"
            android:padding="3dp"/>
        <TextView
            android:id="@+id/his_item_xin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textSize="@dimen/text_12sp"
            android:textColor="@color/hui"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
    </LinearLayout>


</LinearLayout>