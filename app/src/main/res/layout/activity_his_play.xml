<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/beijing_hui"
    tools:context=".OtherActivity.HisPlayUpItemActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/his_play_item_im"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/title_image_his"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:scaleType="fitXY"
                    android:padding="2dp"

                    android:src="@drawable/his_play_item_im"/>
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/title_name_his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_toRightOf="@+id/title_image_his"
                android:layout_alignTop="@+id/title_image_his"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/time_play_his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更新时间"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/title_image_his"
                android:layout_below="@+id/title_name_his"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/num_play_his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播放次数"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/title_image_his"
                android:layout_below="@+id/time_play_his"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/num1_play_his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="追番次数"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_marginTop="5dp"

                android:layout_toRightOf="@+id/num_play_his"
                android:layout_below="@+id/time_play_his"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/num_play_his"
                android:layout_toRightOf="@+id/title_image_his"
                android:layout_marginTop="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    >
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/daily_video_action_bg"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share_green"
                            android:layout_gravity="center"/>

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_10sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/daily_video_action_bg"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bangumi_follow"
                            android:layout_gravity="center"/>

                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="追番"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_10sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    >
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/daily_video_action_bg"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_download"
                            android:layout_gravity="center"/>

                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="缓存"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_10sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/language_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/title_image_his"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/china_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 中文版  "
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14sp"
                        android:background="@drawable/bangumi_season_title_background_first"
                        />
                    <TextView
                        android:id="@+id/china_language_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  中文版   "
                        android:gravity="center"
                        android:padding="15dp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_16sp"
                        android:visibility="gone"
                        android:background="@drawable/bangumi_season_title_background_first_indicator"
                        />

                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  日文版 "
                        android:layout_below="@+id/title_image_his"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14sp"
                        android:background="@drawable/bangumi_season_title_background_last"
                        android:layout_marginLeft="-4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   日文版  "
                        android:layout_below="@+id/title_image_his"
                        android:gravity="center"
                        android:padding="15dp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_16sp"
                        android:visibility="gone"
                        android:background="@drawable/bangumi_season_title_background_last_indicator"
                        android:layout_marginLeft="-4dp"
                        />

                </FrameLayout>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/lishi_his"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/beijing_huibai"
                app:cardElevation="1dp"
                app:cardCornerRadius="2dp"
                app:cardPreventCornerOverlap="true"
                android:layout_below="@+id/language_change"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"


                    >
                    <TextView
                        android:id="@+id/lishi01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上次看到第"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp"
                        />
                    <TextView
                        android:id="@+id/lishi02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_12sp"
                        android:layout_toRightOf="@+id/lishi01"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="话"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp"
                        android:layout_toRightOf="@+id/lishi02"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="继续播放"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_12sp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/xuanji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                android:text="选集"
                android:layout_below="@+id/lishi_his"
                android:padding="15dp"/>


            <projectedit.lanou.com.bilibili.Utility.view.NoScrollGridView
                android:id="@+id/xuanji_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:layout_below="@+id/xuanji">

            </projectedit.lanou.com.bilibili.Utility.view.NoScrollGridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui"
                android:layout_below="@+id/xuanji_list"/>
            <TextView
                android:id="@+id/jianjie01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                android:text="简介"
                android:layout_below="@+id/xuanji_list"
                android:padding="15dp"/>
            <TextView
                android:id="@+id/jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hui"
                android:textSize="@dimen/text_14sp"
                android:text="简介正文"
                android:layout_below="@+id/jianjie01"
                android:padding="15dp"
                android:layout_marginTop="-15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui"
                android:layout_below="@+id/jianjie"/>
            <RelativeLayout
                android:id="@+id/pinglun_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/jianjie"
                android:padding="15dp">
                <TextView
                    android:id="@+id/pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第2话评论"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/pinglun_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(1315)"
                    android:textColor="@color/hui"
                    android:layout_toRightOf="@+id/pinglun"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_15sp"
                    android:text="更多评论"/>
                <projectedit.lanou.com.bilibili.Utility.view.NoScrollGridView
                    android:id="@+id/pinglun_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="1"
                    android:layout_below="@+id/pinglun">

                </projectedit.lanou.com.bilibili.Utility.view.NoScrollGridView>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/pinglun_rl">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/hui"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_14sp"
                    android:text="    更多评论    "
                    android:background="@color/beijing_hui"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/choose_his"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                android:text="番剧推荐"
                android:padding="15dp"
                android:layout_below="@+id/lun"/>

            <projectedit.lanou.com.bilibili.Utility.view.NoScrollGridView
                android:id="@+id/choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose_his"
                android:numColumns="3">

            </projectedit.lanou.com.bilibili.Utility.view.NoScrollGridView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
