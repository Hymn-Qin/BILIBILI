<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/beijing_huibai"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/recycler_bg_02"

        >

        <ImageView
            android:id="@+id/item_image_his_down"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/yinyong" />

        <TextView
            android:id="@+id/item_name_his_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_image_his_down"
            android:text="[官方] 旧番连播智慧版"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp"
            android:padding="@dimen/left_10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/item_name_his_down"
            android:layout_marginLeft="@dimen/left_10dp"
            android:layout_marginRight="@dimen/left_10dp">
            <TextView
                android:id="@+id/item_text1_his_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游泳大会 ! 骑马战 ! "
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/hui"
                android:maxLines="2"/>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>